{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["tailwindcss"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "tailwindcss/classnames-order": "warn"
  },
  "settings": {
    "tailwindcss": {
      "groupByResponsive": true,
      "officialSorting": true
    }
  }
}