generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id           String     @id @default(uuid())
  firstName    String
  lastName     String
  email        String     @unique
  profileImage String
  job          String
  nickname     String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  posts        Post[]
  Favorite     Favorite[]
  Review       Comment[]
}

model Post {
  id        String     @id @default(uuid())
  title     String
  content   String
  category  String
  image     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  profile   Profile    @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId String
  Favorite  Favorite[]
  Review    Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  // Profile(사용자) 관계
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId String
  // post(게시글) 관계
  Post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Favorite {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profile(사용자) 관계
  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId String

  // post(게시글) 관계
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String
}
